BlackOps.add_node({
    :name => 'local',
    :ip => '127.0.0.1',
    :port => '3000',
}.merge(
    @t[:ssh],
    @t[:postgres],
    #@t[:git],
    #@t[:commons],
    #@t[:emails],
    #@t[:i2p],
    #@t[:monitoring],
    @t[:mysaas],
