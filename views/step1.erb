<%
min_rows = 1
csv = @login.user.preference('step1.csv', '', nil)
rows = csv.split("\n").map { |row| row.split(',').map { |s| s.strip } }
# complete rows with empty cells
(min_rows - rows.size + 1).times { rows << ['', '', ''] } if rows.size <= min_rows
%>

