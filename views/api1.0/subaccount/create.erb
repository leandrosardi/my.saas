<% 
# signup new account
@return_message = {}
begin
	h = {
		:companyname => @body['companyname'],
		:username => @body['username'],
		:email => @body['email'],
		:password => guid, # sub accounts are accessed from master only, so password is not needed
	}
	# guardar el ID de intento de l en una variable de sesion
	login = BlackStack::MySaaS::Account.signup(h, false)
	@return_message['status'] = 'success'
rescue => e
    @return_message['status'] = @body['backtrace'] ? e.to_console : e.message
end
return @return_message.to_json
%>