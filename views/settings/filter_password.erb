<%
user = @login.user
current_password = params[:current_password]
new_password_1 = params[:new_password_1]
new_password_2 = params[:new_password_2]

begin
	user.change_password(current_password, new_password_1, new_password_2)
rescue => e
	redirect "/settings/password?err=#{CGI::escape(e.message)}"
end

redirect "/settings/password?msg=#{CGI::escape("Password Changed Successfully.")}"
%>
